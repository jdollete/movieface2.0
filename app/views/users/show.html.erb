<div class="">
  Welcome, <%= @user.username %>!!!
</div>


<!-- Favorite movies left side -->
<div class="">

  <div class="">
    Favorite Movies:
  </div>

  <div class="">
    <ul>
      <% @user.favorites.each do |favorite| %>

      <li><i class="fa fa-star-half-o fa-lg" aria-hidden="true"></i>  <%= favorite.movie.title %> - <%= favorite.movie.year %></li>
      <% end %>
    </ul>
  </div>

</div>


<!-- Right side partial reviews -->
<div class="">
  <div class="">
    Reviewed Movies:
  </div>

  <div class="">
    <ul>
      <% @user.reviews.each do |review| %>
        <li><a href="/movies/<%= review.movie.id %>/reviews/<%= review.id %>"><%= review.movie.title %></a> - <%= review.rating %>/5</li>
      <% end %>
    </ul>
  </div>
</div>
