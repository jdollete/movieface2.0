<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
       <script src="https://use.fontawesome.com/b830648cce.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <%= link_to "MovieFace 2.0",root_url, class: "brand-logo" %>
        <ul id="nav-mobile" class="right hide-on-med-and-down ">
          <% if logged_in? %>
            <li><%= link_to "#{current_user.username}", user_path(current_user)%></li>
            <li><%= link_to "Log Out", session_path(session), method: :delete%></li>
          <% else %>
            <li><%= link_to "Create an Account", new_user_path %></li>
            <li><%= link_to "Log In", new_session_path%></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <% if flash[:error] %>
      <% flash[:error].each do |error| %>
      <ul>
        <%= error %>
      </ul>
      <% end %>
    <% end %>
    <form id='randomize' action="/movies" method="post">
      <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">
      <input type='text' name='query' placeholder='Movie Title'>
      <input type='submit' value="Search">
    </form>
    <%= yield %>
    <footer id="footer" class="page-footer">
      <div class="footer-copyright">
        <div class="">
        <p class="copy_right">Â© 2016 Copyright MovieFace2.0</p>
        <p class="api_credit">API power by <a href="https://www.omdbapi.com/">OMDB</a> and <a href="https://developers.google.com/youtube/v3/">YOUTUBE</a></p>
        </div>
      </div>
    </footer>
  </body>
</html>
